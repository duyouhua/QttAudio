<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/comonColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/regist_backbutton"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/comonColor"
            android:src="@drawable/back"
            android:textColor="@color/whiteColor"
            android:layout_weight="1"/>


        <TextView android:id="@+id/regist_textTile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:text="QttAudio体验版"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/regist_number_layout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/comonColor"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/edit_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:singleLine="true"
                android:background="@drawable/icon_textviewbac"
                android:hint="请输入注册的手机号" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/comonColor"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/regist_verifacation_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/icon_textviewbac"
                android:hint=""
                android:singleLine="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/regist_get_varification_button"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:textColor="@color/whiteColor"
                android:background="@color/comonColor"
                android:text="获取验证码"
                android:textSize="11dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="260dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/comonColor"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/regist_password_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/icon_textviewbac"
                android:hint="请输入8-16位密码"
                android:password="true"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="330dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/comonColor"
                android:gravity="center"
                android:text="确认密码"
                android:singleLine="true"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/regist_confirm_password_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/icon_textviewbac"
                android:hint="请再输一次密码"
                android:password="true"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="440dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/regist_regist_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/comonColor"
                android:textColor="@color/whiteColor"
                android:layout_gravity="center"
                android:text="注册"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="510dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

           <TextView
               android:id="@+id/regist_result_textView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/comonColor"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="20dp"
               android:visibility="gone"
               android:text="注 册 成 功!"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
