<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/listview_addip_other_textView"
            android:layout_width="70dp"
            android:layout_weight="3"
            android:text="本机ip:"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>



        <!--android:inputType="phone"-->
        <EditText
            android:id="@+id/listview_addip_other_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:ems="10"
            android:textSize="14dp"
            android:background="@drawable/icon_textviewbac"
            android:singleLine="true"/>

        <ImageButton
            android:id="@+id/listview_addip_other_imageButton"
            android:backgroundTint="@color/whiteColor"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="本地端口"/>

        <TextView
            android:id="@+id/listview_addip_other_localport"
            android:layout_width="0dp"
            android:layout_weight="2.4"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.4"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="远端端口"
            android:id="@+id/textView2" />


        <!---->
        <EditText
            android:id="@+id/listview_addip_other_remoteport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="phone"
            android:textSize="14dp"
            android:background="@drawable/icon_textviewbac"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:id="@+id/textView" />
    </LinearLayout>
</LinearLayout>


